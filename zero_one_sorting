// zero one sorting or two vector problem
#include <iostream>
#include <vector>
using namespace std;

void sort_zero_one(vector<int> &v){
    int count =0;
    
    for(int i =0; i<v.size(); i++){
        if(v[i]==0){
            count++;
        }
    }
    cout<<count<<endl;
    
    for(int i=0; i<v.size();i++){
        if(i<count){
            v[i]=0;
        }
        else
        v[i]=1;
    }
}

int main() {
    int n;
    cin>>n;
    
    vector<int>v;
    
    for(int i =0; i<n; i++){
        int ele; 
        cin>>ele;
        v.push_back(ele);
    }
    sort_zero_one(v);
    
     for(int i =0; i<n; i++){
       cout<<v[i]<<" ";
    }
    cout<<endl;
    
    return 0;
}
